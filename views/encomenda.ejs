                </div>
                <h1 class="primary-title payment">Encomendas</h1>
            </div>
        </header>

        <main>
            <section class="payment-container">
              
              <table class="encomenda-table container">
                  <tr>
                    <th>#</th>
                    <th>Nome Cliente</th>
                    <th>Email</th>
                    <th>Telefone</th>
                    <th>Preço</th>
                    <th>Nome Produto</th>
                  </tr>
                  <% for(let i = 0; i < data.length; i++) { %>
                    <tr>
                      <td><%= data[i].id %></td>
                      <td><%= data[i].nome %></td>
                      <td><%= data[i].email %></td>
                      <td><%= data[i].telefone %></td>
                      <td><%= data[i].preco %></td>
                      <td><%= data[i].nome_produto %></td>
                    </tr>
                  <%}%>                  
              </table>
              
            </section>
        </main>

        <%- include("./partials/footer.ejs")%>

    </body>
</html>